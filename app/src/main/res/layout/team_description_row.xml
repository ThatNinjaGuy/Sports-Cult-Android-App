<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_margin="5dip">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/team_profile_pic"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:src="@drawable/album1"/>
        <TextView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:text="SS"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"
            android:textAllCaps="true"
            android:id="@+id/list_of_teams_default_profile_pic"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team Name"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/backdrop_subtitle"
            android:id="@+id/team_profile_name"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coach name"
                android:textSize="15dip"
                android:layout_marginBottom="5dip"
                android:gravity="left"
                android:id="@+id/team_profile_coach_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dip"
                android:text="Location"
                android:layout_alignParentEnd="true"
                android:id="@+id/team_profile_location"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>